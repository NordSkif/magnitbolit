.popup-video.swiper-no-swiping(
    v-bind:class="{ 'popup-video_active': this.modals.popupVideo1.active }"
)
    .popup-video__video-pleer-box(
        v-bind:class="{ 'popup-video__video-pleer-box_active': this.modals.popupVideo1.play }"
    )
        .popup-video__video-pleer-btn.popup-video__video-pleer-btn_play(
            v-on:click="playVideoFile('popupVideo1')"
        )
        .popup-video__video-pleer-btn.popup-video__video-pleer-btn_pause(
            v-on:click="pauseVideoFile('popupVideo1')"
        )
        .popup-video__progress
            .popup-video__progress-inner
    video.popup-video__video-pleer-file(
        muted
        v-bind="{id: this.modals.popupVideo1.id}"
    )
        source(
            src="video/buran_fly_scheme.mp4"
            type="video/mp4"
        )